---
kind: CustomResourceDefinition
apiVersion: apiextensions.k8s.io/v1
metadata:
  name: datamanagerjobs.squonk.it
spec:
  conversion:
    strategy: None
  group: squonk.it
  names:
    kind: DataManagerJob
    listKind: DataManagerJobList
    plural: datamanagerjobs
    singular: datamanagerjob
  scope: Namespaced
  versions:
  - name: v2
    served: true
    storage: true
    schema:
      openAPIV3Schema:
        type: object
        properties:
          spec:
            type: object
            properties:
              # All DataManager-injected material
              # will be namespaced by the property 'imDataManager'
              imDataManager:
                type: object
                properties:
                  debug:
                    type: boolean
                    description: >-
                      Set this to prevent the operator from automatically
                      deleting the corresponding Job and its Pod when the
                      Job finishes. The Pod will remain, allowing a developer
                      to debug its behaviour. The Job and Pod will need to
                      be deleted manually to avoid filling the namespace with
                      completed Jobs and Pods.
                  image:
                    type: string
                  pullSecret:
                    type: string
                  command:
                    type: string
                  taskId:
                    type: string
                  projectMount:
                    type: string
                  workingDirectory:
                    type: string
                  workingSubPath:
                    type: string
                  resources:
                    type: object
                    properties:
                      limits:
                        type: object
                        properties:
                          cpu:
                            type: string
                          memory:
                            type: string
                      requests:
                        type: object
                        properties:
                          cpu:
                            type: string
                          memory:
                            type: string
                  securityContext:
                    type: object
                    properties:
                      runAsUser:
                        type: integer
                      runAsGroup:
                        type: integer
                      fsGroup:
                        type: integer
                  project:
                    type: object
                    properties:
                      claimName:
                        type: string
                      id:
                        type: string
                  labels:
                    type: array
                    items:
                      type: string
                  environment:
                    type: array
                    items:
                      type: string
